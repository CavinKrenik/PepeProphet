#!/bin/bash

echo "👋 Welcome back to PepeProphet Terminal"

# Define required files
required_files=("start_all.py" "main.py" "retrain_schedule.py" "predict_action_model.py" ".env")

missing=0
for file in "${required_files[@]}"; do
  if [ ! -f "$file" ]; then
    echo "❌ Missing: $file"
    missing=1
  fi
done

# Check for main log file
if [ ! -f "logs/pepeprophet_main.log" ]; then
  echo "⚠️  Warning: Log file 'logs/pepeprophet_main.log' not found"
else
  echo "📜 Main log file exists."
fi

if [ "$missing" -eq 1 ]; then
  echo "🚫 Required files missing. Fix above issues before running."
  return 1
fi

# Optional: Show pause prompt
read -p "🟢 Press Enter to launch PepeProphet... " confirm

# Launch everything
python start_all.py
