# Auto-activate virtualenv and start bot + terminal
if [ -d "venv" ]; then
    source venv/Scripts/activate
fi

echo "✅ Virtualenv activated."

# Launch background retrainer
echo "🔁 Starting retrainer..."
nohup python retrain_schedule.py > logs/retrainer.log 2>&1 &

# Launch main bot
echo "🤖 Starting PepeProphet bot..."
nohup python main.py > logs/main.log 2>&1 &

# Launch web terminal
echo "🖥️ Starting web terminal..."
nohup streamlit run web_terminal.py > logs/web_terminal.log 2>&1 &

# Optional: Greet the user
echo "🌟 Welcome back, Cavin! PepeProphet is running."
